keycode  16 = 7 ampersand 7 ampersand ampersand ampersand ampersand
keycode  17 = 8 asterisk 8 asterisk enfilledcircbullet oneeighth enfilledcircbullet
keycode  20 = minus underscore minus underscore emdash hyphen emdash
keycode  21 = equal plus equal plus notequal plusminus notequal
keycode  22 = BackSpace BackSpace BackSpace BackSpace BackSpace BackSpace Terminate_Server
keycode  26 = e E e E EuroSign E EuroSign
keycode  27 = r R r R registered R registered
keycode  28 = t T t T trademark T trademark
keycode  29 = y Y y Y yen Y yen
keycode  33 = p P p P acute doubleacute acute
keycode  34 = bracketleft braceleft bracketleft braceleft bracketleft braceleft bracketleft
keycode  35 = bracketright braceright bracketright braceright bracketright braceright bracketright
keycode  38 = a A a A U0301 A U0301
keycode  39 = s S s S section S section
keycode  40 = d D d D degree division degree
keycode  41 = f F f F sterling F sterling
keycode  44 = j J j J doublelowquotemark singlelowquotemark doublelowquotemark
keycode  45 = k K k K leftdoublequotemark leftsinglequotemark leftdoublequotemark
