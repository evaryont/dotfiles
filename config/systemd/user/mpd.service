[Unit]
Description = Music Player Daemon
After=sound.target

[Service]
Type      = forking
ExecStart = /usr/bin/mpd ${XDG_CONFIG_HOME}/mpd.conf
ExecStop  = /usr/bin/mpd --kill ${XDG_CONFIG_HOME}/mpd.conf
Restart   = always
PIDFile   = ${XDG_DATA_HOME}/mpd/mpd.pid
Sockets   = mpd.socket

[Install]
WantedBy = default.target
