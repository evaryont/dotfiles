[merge "merge-changelog"]
    name = GNU-style ChangeLog merge driver
    driver = /usr/share/gnulib/modules/git-merge-changelog %O %A %B
[merge]
    tool = fugitive
[mergetool "fugitive"]
    cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[mergetool "vimdiff3"]
    cmd = vim -f -d \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
