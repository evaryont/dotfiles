! Default HOME, though I *really* don't like this. It should be passed in when
! you call xrdb, e.g. `xrdb -DHOME=$HOME ~/.Xdefaults`.
#ifndef HOME
#define HOME /home/colin
#endif

URxvt*font:               xft:Liberation Mono:pixelsize=14            , xft:Dejavu Sans Mono:pixelsize=14
URxvt*boldFont:           xft:Liberation Mono:bold:pixelsize=14       , xft:Dejavu Sans Mono:bold:pixelsize=14
URxvt*italicFont:         xft:Liberation Mono:italic:pixelsize=14     , xft:Dejavu Sans Mono:italic:pixelsize=14
URxvt*boldItalicFont:     xft:Liberation Mono:italic:bold:pixelsize=14, xft:Dejavu Sans Mono:italic:bold:pixelsize=14
urxvt*scrollBar:          false
URxvt.perl-ext-common:    default,matcher
URxvt.urlLauncher:        open-browser
URxvt.matcher.pattern.1:  \\bwww\\.[\\w-]\\.[\\w./?&@#-]*[\\w/-] 
! Black background: 32 bit (24 bits + 8 for alpha), partially transparent
urxvt*background:         rgba:0000/0000/0000/dddd
URxvt.foreground:         grey80
URxvt.colorBD:            white
URxvt.depth:              32
URxvt.saveLines:          128
! Only automatically scroll when I type a key, not when something is outputted
URxvt.scrollTtyOutput:    false
URxvt.scrollWithBuffer:   false
URxvt.scrollTtyKeypress:  true
! Green cursor, with black highligted text
URxvt.cursorColor:        green
URxvt.cursorColor2:       black

