CHOST="i686-pc-linux-gnu"
CFLAGS="-O2 -pipe -fomit-frame-pointer -g"
CXXFLAGS="$CFLAGS"

eval `dircolors -b $HOME/.dir_colors`

export CANTOPATH="$HOME/.config/canto"
